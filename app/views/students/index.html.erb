<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr style="background-color:rgba(255,255,255,0.5);">
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.user.email %></td>
        <td><%= link_to 'Show', student , class: 'btn btn-default'%></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-default'%></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>
<p align="center">
<%= link_to 'New Student', new_student_path , class: 'btn btn-primary'%>
</p>
