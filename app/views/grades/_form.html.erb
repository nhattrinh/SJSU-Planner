<div class="form-horizontal">
<div class="col-md-6 col-md-offset-3">

<%= form_for(grade) do |f| %>
  <% if grade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul>
      <% grade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :letter_grade, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :letter_grade, valid_grades, :to_s, :to_s, {prompt: true}, {class: 'form-control'}  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :semester_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :semester_id, Semester.all, :id, :full_name, {prompt: true}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :course_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :course_id, Course.all, :id, :full_name, {prompt: true}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :student_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :student_id, Student.all, :id, :full_name, {prompt: true}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

</div>
</div>