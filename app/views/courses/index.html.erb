<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Credits</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr style="background-color:rgba(255,255,255,0.5);">
        <td><%= course.name %></td>
        <td><%= course.number %></td>
        <td><%= course.credits %></td>
        <td><%= link_to 'Show', course, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-default' %></td>
        <td><%= link_to 'Remove', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: 'btn btn-primary' %>
