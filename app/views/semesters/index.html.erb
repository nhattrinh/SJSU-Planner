<p id="notice"><%= notice %></p>

<h1>Semesters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      
      <th colspan="3"></th>
      <th>Units</th>
      <th>GPA</th> 
    </tr>
  </thead>

  <tbody>
    <% @semesters.each do |semester| %>
      <tr>
        <td><%= semester.name %></td>
        <td><%= semester.year %></td>
        <td><%= link_to 'Show', semester %></td>
        <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
        <td><%= link_to 'Destroy', semester, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= total_num_of_units(semester)%> </td> 
        <td><%= grade_point_average(semester)%> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>

<p> Units planned: <%=units_so_far(@semesters) %> </p>
<p> Cumulative GPA: <%=cumulative_GPA(@semesters) %> </p>

<br/>

<%= link_to 'New Semester', new_semester_path %>
