<h1>Listing semesters</h1>
<%= link_to 'New semester', new_semester_path %>

<table>
    <tr>
        <th>Name</th>
        <th>Year</th>
        <th colspan="3"></th>
    </tr>

    <% @semesters.each do |semester| %>
        <tr>
            <td><%= semester.name%></td>
            <td><%= semester.year%></td>
            <td><%= link_to 'Show', semester_path(semester) %></td>
            <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
            <td><%= link_to 'Destroy', semester_path(semester),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>