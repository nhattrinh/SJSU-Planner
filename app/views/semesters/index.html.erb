<p id="notice"><%= notice %></p>

<h1>Semesters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @semesters.each do |semester| %>
      <tr style="background-color:rgba(255,255,255,0.5);">
        <td><%= semester.name %></td>
        <td><%= semester.year %></td>
        <td><%= link_to 'Show', semester, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_semester_path(semester), class: 'btn btn-default' %></td>
        <td><%= link_to 'Remove', semester, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Semester', new_semester_path , class: 'btn btn-primary'%>
